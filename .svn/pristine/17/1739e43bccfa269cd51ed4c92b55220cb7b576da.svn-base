body,
html {
    margin: 0;
    padding: 0;
    overflow: hidden;
}

.dashboard {
    min-height: 100vh;
    background-color: #f8fafc;
    margin: 0;
    padding: 0;
}

.chart-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: white;
    padding: 1rem;
    background: linear-gradient(to right, #ef4444, #f97316);
    border-radius: 8px;
    justify-content: center;
}

.chart-title {
    margin: 0;
    font-size: 1.25rem;
}

.humidity-label {
    background-color: transparent !important;
    border: none !important;
    box-shadow: none !important;
    padding: 0 !important;
}

.device-name {
    font-weight: bold;
    text-shadow:
        -1px -1px 0 white,
        1px -1px 0 white,
        -1px 1px 0 white,
        1px 1px 0 white;
    font-size: 12px;
    text-align: center;
    margin-bottom: 0px;
    display: block;
}

.value-badge {
    background-color: white;
    border-radius: 15px;
    padding: 2px 6px 0px 10px;
    font-size: 11px;
    text-align: center;
    display: inline-block;
    font-weight: bold;
}

/* Make the map tiles lighter */
.leaflet-tile {
    filter: brightness(1.1) contrast(0.85) saturate(0.7) opacity(0.8);
}

.devices-counter {
    position: absolute;
    bottom: 10px;
    left: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    z-index: 1000;
    text-align: center;
}

.counter-value {
    font-size: 1.25rem;
    font-weight: bold;
}

.counter-label {
    font-size: 0.75rem;
    opacity: 0.8;
}

.filter-toggle {
    position: absolute;
    top: 150px;
    right: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    z-index: 1000;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.view-toggle {
    position: absolute;
    top: 100px;
    right: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    z-index: 1000;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.chart-toggle {
    top: 10px;
    right: 10px;
    position: fixed;
}

.filter-panel {
    position: absolute;
    top: 190px;
    right: 10px;
    background-color: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 1rem;
    border-radius: 0.375rem;
    z-index: 1000;
    width: 250px;
    transition: all 0.3s ease;
}

.filter-panel.hide {
    transform: translateX(260px);
}

.filter-panel.show {
    transform: translateX(0);
}

.filter-header {
    font-weight: bold;
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
}

.institute-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.toggle-switch {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.75rem;
}

.toggle-label {
    flex: 1;
}

.toggle-button {
    width: 36px;
    height: 18px;
    background-color: #4b5563;
    border-radius: 9px;
    position: relative;
    cursor: pointer;
    transition: background-color 0.3s;
}

.toggle-button.active {
    background-color: #3b82f6;
}

.toggle-slider {
    width: 14px;
    height: 14px;
    background-color: white;
    border-radius: 50%;
    position: absolute;
    top: 2px;
    left: 2px;
    transition: left 0.3s;
}

.toggle-button.active .toggle-slider {
    left: 20px;
}

.map-datetime {
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 1000;
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.date-display,
.time-display {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
}

.map-heading {
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 1000;
}

.map-heading h1 {
    color: white;
    margin: 0;
    padding: 10px 15px;
    font-size: 24px;
    font-weight: bold;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 8px;
    letter-spacing: 1px;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
}

.leaflet-container {
    width: 100%;
    height: 100vh;
    z-index: 1;
}

.card::before {
    background: none !important;
}

.card:hover {
    transform: none !important;
}

