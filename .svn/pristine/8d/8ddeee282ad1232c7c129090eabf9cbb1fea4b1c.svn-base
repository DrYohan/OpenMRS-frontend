/* Enhanced color palette and styling */
:root {
  --gradient-primary: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  --gradient-secondary: linear-gradient(135deg, #3b82f6 0%, #2dd4bf 100%);
  --gradient-success: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  --gradient-warning: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
  --gradient-purple: linear-gradient(135deg, #8b5cf6 0%, #c084fc 100%);
  --gradient-rose: linear-gradient(135deg, #e11d48 0%, #fb7185 100%);
  --gradient-cyan: linear-gradient(135deg, #06b6d4 0%, #22d3ee 100%);
  --gradient-violet: linear-gradient(135deg, #7c3aed 0%, #a78bfa 100%);

  --color-bg: #f8fafc;
  --color-card: #ffffff;
  --color-text: #1e293b;
  --color-text-light: #64748b;
  --color-border: rgba(148, 163, 184, 0.1);

  --shadow-sm: 0 2px 4px rgba(148, 163, 184, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(148, 163, 184, 0.1),
    0 2px 4px -1px rgba(148, 163, 184, 0.06);
  --shadow-lg: 0 20px 25px -5px rgba(148, 163, 184, 0.1),
    0 10px 10px -5px rgba(148, 163, 184, 0.04);
  --shadow-glow: 0 0 15px rgba(99, 102, 241, 0.1);
}

body {
  margin: 0;
  font-family: system-ui, -apple-system, sans-serif;
  color: var(--color-text);
  background: var(--color-bg);
  min-height: 100vh;
}

.content {
  height: 100vh;
  overflow: auto; /* Ensure scrolling for the main container */
}

.container {
  min-height: 150vh;
  background: linear-gradient(135deg, #f8fafc 0%, #eff6ff 100%);
  overflow-y: auto; /* Allow vertical scrolling */
}

.header {
  background: var(--color-card);
  border-bottom: 1px solid var(--color-border);
  padding: 1.25rem 2.5rem;
  box-shadow: var(--shadow-sm);
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(10px);
  background: rgba(255, 255, 255, 0.9);
}

.header-content {
  max-width: 1440px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  font-size: 1.75rem;
  font-weight: 700;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: -0.025em;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 1.25rem;
}

.notification-btn {
  padding: 0.75rem;
  border-radius: 12px;
  border: none;
  background: transparent;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.notification-btn:hover {
  background: var(--gradient-secondary);
  transform: translateY(-1px);
}

.notification-btn:hover svg {
  color: white;
}

.notification-indicator {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  height: 0.625rem;
  width: 0.625rem;
  background: var(--gradient-rose);
  border-radius: 50%;
  border: 2px solid var(--color-card);
}

.avatar {
  height: 2.5rem;
  width: 2.5rem;
  background: var(--gradient-primary);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 1rem;
  box-shadow: var(--shadow-glow);
  transition: transform 0.3s ease;
}

.avatar:hover {
  transform: scale(1.05);
}

.main-content {
  max-width: 1440px;
  margin: 0 auto;
  padding: 2.5rem;
  overflow-y: auto;
}

.grid {
  display: grid;
  gap: 2rem;
}

@media (min-width: 768px) {
  .grid-cols-2 {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .grid-cols-4 {
    grid-template-columns: repeat(4, 1fr);
  }

  .grid-cols-8-4 {
    grid-template-columns: 2fr 1fr;
    gap: 2.5rem;
  }
}

.card {
  background: var(--color-card);
  border-radius: 16px;
  border: 1px solid var(--color-border);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--gradient-primary);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
}

.card:hover::before {
  opacity: 1;
}

.card-content {
  padding: 1.75rem;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.25rem;
}

.icon-wrapper {
  padding: 1rem;
  border-radius: 14px;
  width: 3.5rem;
  height: 3.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin-bottom: 10px;
}

.icon-wrapper svg {
  width: 1.75rem;
  height: 1.75rem;
  transition: transform 0.3s ease;
}

.card:hover .icon-wrapper svg {
  transform: scale(1.1);
}

.icon-blue {
  background: var(--gradient-secondary);
  color: white;
}

.icon-purple {
  background: var(--gradient-purple);
  color: white;
}

.icon-emerald {
  background: var(--gradient-success);
  color: white;
}

.icon-amber {
  background: var(--gradient-warning);
  color: white;
}

.card-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--color-text);
  margin: 0;
  letter-spacing: -0.025em;
}

.card-description {
  font-size: 0.875rem;
  color: var(--color-text-light);
  margin: 0 0 0 0;
}

.section-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 1.5rem;
  letter-spacing: -0.025em;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.activity-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  border-radius: 12px;
  transition: all 0.2s ease;
  border: 1px solid transparent;
}

.activity-item:hover {
  background: rgba(99, 102, 241, 0.05);
  border-color: var(--color-border);
}

.activity-indicator {
  width: 0.75rem;
  height: 0.75rem;
  border-radius: 50%;
  position: relative;
}

.activity-indicator::after {
  content: "";
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  border-radius: 50%;
  background: inherit;
  opacity: 0.2;
  transition: all 0.2s ease;
}

.activity-item:hover .activity-indicator::after {
  transform: scale(1.5);
}

.activity-content {
  flex: 1;
}

.activity-title {
  font-size: 0.9375rem;
  font-weight: 500;
  color: var(--color-text);
  margin: 0;
}

.activity-time {
  font-size: 0.8125rem;
  color: var(--color-text-light);
  margin: 0.25rem 0 0 0;
}

.container1 {
  padding: 32px;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  max-width: 1500px;
  margin: 0 auto;
  margin-top: 20px;
}
